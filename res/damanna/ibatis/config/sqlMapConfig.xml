<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig
	PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>
	<!-- DB와 연결하는 정보를 properties파일에 설정해 놓고 이 properties파일의 내용을 읽어올 수 있도록 설정한다. -->
	<properties resource="damanna/ibatis/config/dbinfo.properties"/>
	
	<!-- 각각의 sqlMap파일의 네임스페이스와 ID속성 값을 연결해서 실행할 쿼리문을 선택한다. -->
	<settings useStatementNamespaces="true"/>
	
	<!-- 
		쿼리문에 사용할 VO객체는 패키지 이름을 포함한 전체이름을 사용해야한다.
		그렇게 되면 전체 이름의 길이가 너무 길어질 수 있는데 이 전체 이름을 대신해서
		사용할 alias를 설정할 수 있다.
		
		형식) <typeAlias alias="alias명" type="클래스의 전체 이름"/>
	 -->

	 
	 <typeAlias alias="memberVO" type="damanna.vo.MemberVO"/>
	 <typeAlias alias="noticeBoardVO" type="damanna.vo.NoticeBoardVO"/>
	 <typeAlias alias="paymentVO" type="damanna.vo.PaymentVO"/>
	 <typeAlias alias="freeBoardVO" type="damanna.vo.FreeBoardVO"/>
	 <typeAlias alias="adminVO" type="damanna.vo.AdminVO"/>
	

	 <!-- DB와의 연결을 처리하는 부분 -->
	 <transactionManager type="JDBC">
	 	<dataSource type="SIMPLE">
	 		<property name="JDBC.Driver" value="${driver}"/>
	 		<property name="JDBC.ConnectionURL" value="${url}"/>
	 		<property name="JDBC.Username" value="${user}"/>
	 		<property name="JDBC.Password" value="${pass}"/>
	 	</dataSource>
	 </transactionManager>
	 
	 <!-- 실행할 SQL문 등록하기 -->
	 <!-- 
	 	실행할 SQL문은 다른 xml문서로 따로 작성한 후 그 xml문서를 아래와 같이 등록하면 된다.
	 	형식) <sqlMap resource="경로명/파일명.xml"/>
	  -->
	  
	  <sqlMap resource="damanna/ibatis/mapping/member.xml"/>
	  <sqlMap resource="damanna/ibatis/mapping/noticeBoard.xml"/>
	  <sqlMap resource="damanna/ibatis/mapping/payment.xml"/>
	  <sqlMap resource="damanna/ibatis/mapping/freeBoard.xml"/>
	  <sqlMap resource="damanna/ibatis/mapping/admin.xml"/>
	  
</sqlMapConfig>